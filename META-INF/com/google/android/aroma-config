    "15",    "Sharpening set to 15",               0,      #-- selected.0 = 16
    "16",    "Sharpening set to 16",               0,      #-- selected.0 = 17
    "17",    "Sharpening set to 17",               0,      #-- selected.0 = 18
    "18",    "Sharpening set to 18",               0,      #-- selected.0 = 19
    "19",    "Sharpening set to 19",               0,      #-- selected.0 = 20
    "20",    "Sharpening set to 20",               0,      #-- selected.0 = 21
    "21",    "Sharpening set to 21",               0,      #-- selected.0 = 22
    "22",    "Sharpening set to 22",               0,      #-- selected.0 = 23
    "23",    "Sharpening set to 23",               0,      #-- selected.0 = 24
    "24",    "Sharpening set to 24",               0,      #-- selected.0 = 25
    "25",    "Sharpening set to 25",               0,      #-- selected.0 = 26
    "26",    "Sharpening set to 26",               0,      #-- selected.0 = 27
    "27",    "Sharpening set to 27",               0,      #-- selected.0 = 28
    "28",    "Sharpening set to 28",               0,      #-- selected.0 = 29
    "29",    "Sharpening set to 29",               0,      #-- selected.0 = 30
    "30",    "Sharpening set to 30",               0,      #-- selected.0 = 31
    "31",    "Sharpening set to 31",               0,      #-- selected.0 = 32
    "32",    "Sharpening set to 32",               0,      #-- selected.0 = 33
    "33",    "Sharpening set to 33",               0,      #-- selected.0 = 34
    "34",    "Sharpening set to 34",               0,      #-- selected.0 = 35
    "35",    "Sharpening set to 35",               0,      #-- selected.0 = 36
    "36",    "Sharpening set to 36",               0,      #-- selected.0 = 37
    "37",    "Sharpening set to 37",               0,      #-- selected.0 = 38
    "38",    "Sharpening set to 38",               0,      #-- selected.0 = 39
    "39",    "Sharpening set to 39",               0,      #-- selected.0 = 40
    "40",    "Sharpening set to 40 (Stock)",       0       #-- selected.0 = 41

  #--------[ Initial Value = 0: Unselected, 1: Selected, 2: Group Item, 3: Not Visible ]---------#
  );
  
  ##
  #
  # Next Screen is Installation UI, So change the next button text to "Install Now"
  #
  ini_set("text_next", "<~sharpcustomize.nextbutton>");
  ini_set("icon_next", "@installbutton");

  ###################################################################################################################
  #
  # SHARPENING MOD STEP 4 - MAKE SURE USER KNOW THAT NEXT STEP WAS INSTALLATION PROCESS
  #
  viewbox(
    #-- Title
      "<~sharpconfirmation.title>",

    #-- Text
      "<~sharpconfirmation.text>",

    #-- Icon
      "@install"
  );

  ##
  #
  # Next Button in successfull installation should be back to "Next >"
  #
  ini_set("text_next", "<~text_next>");
  ini_set("icon_next", "@next");

  #-- Extract sleep to /tmp/aroma/sleep. It will be used in updater-script for testing wait script
  restotmp("exec_demo/sleep","sleep");

  ###################################################################################################################
  #
  # SHARPENING MOD STEP 5 - INSTALLATION PROCESS
  #
  setvar("retstatus",
    install(
	  #-- Title
        "<~sharpinstall.title>",
	
	  #-- Installation Process message
	    "<b>"+ini_get("rom_name")+"</b> <~sharpinstall.desc>",
	
	  #-- Installation Icon
        "@install",
	
	  #-- Installation Finish Message
        "<~sharpinstall.finish>"
    )
  );

  ###################################################################################################################
  #
  # SHARPENING MOD STEP 6 - ASK If We Want to go back to main menu
  #
  checkviewbox(
    #-- Title
      "<~sharppostinstall.title>",
  
    #-- Text
      "<~sharppostinstall.text>",
	
    #-- Icon
      "@welcome",

    #-- Checkbox Text
      "<~sharppostinstall.checkbox>",

    #-- Initial Checkbox value ( 0=unchecked, 1=checked ) -  (Optional, default:0)
      "0",

    #-- Save checked value in variable "reboot_it" (Optional)
      "goto_mainmenu"
  );
  if
    getvar("goto_mainmenu")=="1"
  then
    goto("aroma_installer_demo_pos");
  endif;
  
  ##########
  #
  # END SHARPENING MOD
  #

endif;

